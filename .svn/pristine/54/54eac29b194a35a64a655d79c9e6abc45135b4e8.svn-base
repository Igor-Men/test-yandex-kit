{|if $message == 'ok'|}
    <div class="shop-message-success">
        Новый процесс успешно создан.
        Выполняется перенаправление...
    </div>

    <script type="text/javascript">
    document.location = '{|$urlredirect|}';
    </script>
{|/if|}

{|if $message == 'error'|}
    <div class="shop-message-error">
        Ошибка создания бизнес-процесса, скорее всего имя пустое или
        такой процесс уже есть.
    </div>
{|/if|}

{|$table|}

<br />
<br />
<form action="" method="post">
    <h2>Создать новый бизнес-процесс</h2>
    <input type="text" name="name" value="{|$control_name|}" placeholder="Название бизнес-процесса" style="width: 300px;" />
    {|if $box|}
        <select name="type">
            <option value="order">Для заказов</option>
            <option value="issue">Для задач</option>
            <option value="project">Для проектов</option>
        </select>
    {|/if|}
    <input class="ob-button" type="submit" name="add" value="Создать..." />

</form>
