{|if $notifyArray|}
    <div class="shop-popup-block js-notify-message" style="display: none;">
        <div class="dark"></div>
        <div class="popupblock">
            <a href="#" class="close" onclick="popupClose('.js-notify-message');"></a>
            <div class="head">Уведомления</div>
            <div class="window-content">
                {|foreach from=$notifyArray item="e"|}
                    <div class="shop-message-error visible">
                        <a href="{|$e.url|}">{|$e.id|}</a> - {|$e.name|}
                        {|$e.date|}
                    </div>
                {|/foreach|}
            </div>
        </div>
    </div>
{|/if|}