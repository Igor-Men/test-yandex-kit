.ob-data-element {
    position: relative;
    margin: 0 0 14px 0;

    .data-view,
    .data-add {
        display: table;
        width: 100%;
        line-height: $lineHeightBase;
    }

    .el-caption {
        display: table-cell;
        width: 30%;
        color: #898989;
        padding: 0 5px 0 0;

        .light {
            display: block;
            color: #898989;
            font-size: $fontSizeBase - 2;
        }
    }

    .data-add .el-caption {
        padding-top: 6px;
        vertical-align: top;
    }

    .el-value {
        display: table-cell;
        color: #555555;

        .light {
            display: block;
            color: #898989;
            font-size: $fontSizeBase - 2;
            margin: 9px 0 0 0;
        }

        .issue-info {
            display: block;
            color: #898989;
            font-size: $fontSizeBase - 3;
            margin: 0 0 5px 0;
        }

        .issue-closed {
            color: #898989;
        }

        label {
            cursor: pointer;
            display: inline-block;

            input {
                margin: 2px 5px 0 0;
                float: left;
            }
        }

        [type="text"],
        [type="password"],
        .chzn-select,
        textarea {
            width: 100%;
        }

        &.darken {
            color: #000000;

            a {
                color: inherit;
            }
        }
    }

    .ob-link-edit {
        display: none;
    }

    &:hover .ob-link-edit {
        display: inline-block;
    }

    .data-edit {
        position: absolute;
        z-index: 10;
        width: 100%;
        top: -7px;
        left: 0;
        @include box-sizing($bb);
        border: 1px solid $colorBorderBase;
        background-color: #ffffff;
        padding: 0 50px 0 0;
        display: none;
        min-height: 28px;

        &.current {
            z-index: 11;
        }

        [type="text"],
        [type="password"] {
            width: 100%;
            border: none;
            box-shadow: none;
            height: 28px;
        }

        .chzn-select {
            margin: -1px;
        }

        textarea {
            width: 100%;
            border: none;
            box-shadow: none;
            height: 50px;
            position: relative;
        }

        .label-value {
            display: inline-block;
            position: relative;
            line-height: $lineHeightBase + 10;
            padding: 0 0 0 30px;
            cursor: pointer;

            input {
                position: absolute;
                top: 5px;
                left: 5px;
            }
        }

        .tagit {
            border: none;
        }

        .bootstrap-tagsinput {
            border: none;
            width: 100%;
            @include box-sizing($bb);
        }

        .ob-link-delete {
            position: absolute;
            top: 5px;
            right: 7px;
            }

        .ob-link-accept {
            position: absolute;
            top: 5px;
            right: 29px;
        }

        .ob-icon-editmore,
        .ob-link-clear {
            position: absolute;
            top: 5px;
            right: 51px;
          }
    }

    .phone-group {
        padding: 6px 0;

        [type="text"] {
            height: 17px;
        }
    }
}

.ob-details-block {
    background-color: #fffce4;
    border: 1px solid rgba(0, 0, 0, 0.1);
    padding: 10px 10px 0 10px;
    position: relative;

    &.single {
        padding: 10px;
    }

    .wrap {
        letter-spacing: -4px;
    }

    .part {
        display: inline-block;
        vertical-align: top;
        width: 31.5%;
        margin: 0 0 0 2%;
        letter-spacing: 0;

        &:nth-child(3n+1) {
            margin: 0;
        }
    }

    .double .part {
        width: 49%;
        margin: 0 0 0 1%;
    }
}

.ob-data-group {
    position: relative;
    padding: 0 44px 0 0;
    margin: 0 0 -14px 0;

    .ob-link-edit {
        position: absolute;
        top: 5px;
        right: 0;
        opacity: 0;
    }

    &:hover .ob-link-edit {
        opacity: 1;
    }

    .ob-link-delete {
        position: absolute;
        top: 5px;
        right: 0;
        display: none;
    }

    .ob-link-accept {
        position: absolute;
        top: 5px;
        right: 22px;
        display: none;
    }

    .element {
        margin: 0 0 14px 0;
        display: table;
        width: 100%;
        line-height: $lineHeightBase;

        &.empty {
            display: none;
        }

        &.empty-temp {
            display: table;
        }
    }

    &.light {
        margin: 0 0 -4px 0;

        .element {
            margin: 0 0 4px 0;
        }
    }

    .el-caption {
        display: table-cell;
        width: 30%;
        color: #898989;
        padding: 0 5px 0 0;
    }

    .el-value {
        display: table-cell;
    }

    .secondary {
        color: #898989;
        font-size: $fontSizeBase - 2;
    }

    .data-edit {
        @include box-sizing($bb);
        border: 1px solid $colorBorderBase;
        background-color: #ffffff;
        display: none;

        [type="text"] {
            width: 100%;
            border: none;
            box-shadow: none;
            height: 28px;
        }

        .chzn-select {
            margin: -1px;
        }

        textarea {
            width: 100%;
            border: none;
            box-shadow: none;
            height: 50px;
        }
    }

    &.no-control {
        padding: 0;

        .ob-link-edit,
        .ob-link-delete,
        .ob-link-accept {
            display: none !important;
        }
    }

    .element-padding {
        margin: 0 10px 0 0;
    }
}

.ob-label {
    display: inline-block;
    position: relative;
    padding: 0 0 0 20px;
    cursor: pointer;

    &>input {
        position: absolute;
        top: 2px;
        left: 0;
        margin: 0;
    }
}

.shop-tabs {
    background-color: $colorLinkBase;
    line-height: $lineHeightBase + 13;
    padding: 0 4px;
    margin: -10px -10px 10px -10px;;
    color: #ffffff;
    @include box-sizing($bb);

    &.fixed {
        position: fixed;
        top: 40px;
        left: 0;
        margin: 0;
        z-index: 10;
        width: 100%;
    }

    a,
    span {
        color: #ffffff;
        font-size: $fontSizeBase - 2 !important;
        text-decoration: none;
        padding: 3px 6px !important;
        border-radius: 2px;
        white-space: nowrap;
        display: inline;
    }

    a {
        &.selected,
        &:hover {
            background-color: #ffffff !important;
            color: $colorLinkBase;
        }

        &.highlighted {
            background-color: yellow;
            color: $colorLinkBase;
            font-weight: bold;

            &:hover {
                background-color: #00a200;
                color: #ffffff;
                font-weight: bold;
            }
        }

        &:active {
            color: #555555;
        }

        em {
            display: inline-block;
            overflow: hidden;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 400px;
            font-style: normal;
            vertical-align: middle;
            line-height: $lineHeightBase + 10;
        }
    }

    .floated {
        float: right;
    }

    .quick-jump {
        height: 20px;
        border: none;
        width: 80px;
        font-size: $fontSizeBase - 2;
    }
}

.shop-tabs-place {
    min-height: 31px;
}

.shop-tabs-wraper {
    padding: 10px 10px 0 10px;
}

.shop-message-success,
.shop-message-error,
.shop-message-info,
.shop-message-light {
    padding: 22px 22px 22px 50px;
    margin: 1px 1px 9px 1px;
    font-size: $fontSizeBase !important;
    color: #ffffff;

    a {
        font-size: $fontSizeBase !important;
        color: #ffffff;
    }
}

.forms-message-ok,
.forms-message-error {
    display: none;
}

.shop-message-error {
    background: url('/_images/admin/message-error.png') center left no-repeat #d75959;
    display: none;

    &.visible {
        display: block;
    }
}

.shop-message-success {
    background: url('/_images/admin/message-success.png') center left no-repeat #00a200;
    display: none;

    &.visible {
        display: block;
    }
}

.shop-message-info {
    background: url('/_images/admin/message-info.png') center left no-repeat $colorLinkBase;
}

.shop-message-light {
    background-color: rgba(0, 0, 0, 0.05);
    padding: 22px;
    color: #000000;

    a {
        color: inherit;
    }
}

.shop-icon-in,
.shop-icon-out {
    background-image: url('/_images/admin/order-dir-bg-lite.png');
    width: 18px;
    height: 18px;
}

.shop-icon-in {
    background-position: left bottom;
}

.shop-icon-out {
    background-position: left top;
}

.ob-tabs-options {
    border-bottom: 2px solid #505050;
    margin: 0 -10px 20px -10px;
    padding: 0 10px;

    a {
        float: left;
        line-height: $lineHeightBase + 12;
        padding: 0 10px;
        background-color: #a7a7a7;
        color: #ffffff;
        margin: 0 3px 0 0;
        text-decoration: none;
        text-align: center;

        &:hover,
        &.selected {
            background-color: #505050;
        }
    }
}

.ob-link-tooltip {
    background-color: #fffce4;
    border: 1px solid #f0edd6;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.30);

    .tooltipster-content {
        line-height: $lineHeightBase - 2;
        padding: 8px 10px;
        overflow: hidden;
        color: #555555;
    }
}

.ob-form-block {
    table {
        border-collapse: collapse;
    }

    td {
        padding: 0 0 10px 10px;

        &:first-child {
            padding-left: 0;
        }
    }

    [type="text"],
    [type="date"],
    [type="tel"],
    [type="password"],
    textarea {
        width: 300px;
    }

    select {
        width: 300px;
    }

    .light {
        color: #777777;
        font-size: $fontSizeBase - 2;
    }
}

.ob-text {
    form, div, p, a, table, table tr, table td {
        font-size: inherit;
    }
}

.ob-link-floated {
    float: right;
}

.ob-block-caption {
    line-height: $lineHeightBase;
    margin: 0 0 7px 0;

    h1, h2 {
        line-height: $lineHeightBase;
        padding: 0;
        margin: 0;
    }

    .ob-link-floated {
        margin: 2px 0 0 0;
    }
}

.ob-link-success {
    color: green;
}

.ob-link-error {
    color: #f32d3b;
}

.ui-datepicker {
    z-index: 2000 !important;
}

.select2-search-choice {
    background-color: $colorLinkBase !important;

    > div {
        color: #fff;
    }
}

.select2-search-choice-close {
    background: url('/_images/select2/light-theme-select2.png') right -8px no-repeat !important;
    &:hover {
        background: url('/_images/select2/light-theme-select2.png') right 3px no-repeat !important;
    }
}

@media only screen and (-webkit-min-device-pixel-ratio: 1.5) {
    .select2-search-choice-close {
        background-image: url('/_images/select2/light-theme-select2x2.png') !important;
    }
}

.ob-block-rating {
    width: 80px;
    height: 15px;
    background: url('/_images/stars.png') no-repeat;
    position: relative;
    color: inherit;

    .inner {
        position: absolute;
        top: 0;
        left: 0;
        background-image: inherit;
        background-position: left bottom;
        height: 100%;
    }

    em {
        position: absolute;
        visibility: hidden;
    }

    .rating-values {
        position: relative;
        z-index: 1;
        display: table;
        width: 100%;
        height: 100%;

        span {
            display: table-cell;
            cursor: pointer;

            &:before {
                content: ':';
                visibility: hidden;
            }
        }
    }

    .text {
        position: absolute;
        top: 0;
        left: 100%;
        margin: 0 0 0 25px;
        line-height: 100%;
        text-transform: uppercase;
        white-space: nowrap;
        color: inherit;
    }
}

.ob-slide-tabs {
    line-height: $lineHeightBase + 12;
    position: relative;
    padding: 0 0 10px 0;

    a {
        text-decoration: none;
        white-space: nowrap;
        padding: 0 10px;
        position: relative;
        z-index: 2;
        float: left;
        @include transition-duration(0.3s);

        span {
            border-bottom: 1px dashed;
        }

        &:hover,
        &.selected {
            span {
                border-bottom: none;
            }
        }

        &.selected {
            color: #ffffff;
        }
    }

    .hover {
        position: absolute;
        z-index: 1;
        height: 30px;
        width: 0;
        background-color: $colorLinkBase;
        left: 0;
        @include transition-duration(0.3s);
    }
}

.ob-block-doubleform {
    .wrap {
        display: table;
        width: 100%;
    }

    .left-column {
        display: table-cell;
        vertical-align: top;
        background-color: #fffce4;
        border-right: 1px dashed $colorBorderBase;
        padding: 20px 20px 5px 20px;
    }

    .right-column {
        display: table-cell;
        vertical-align: top;
        background-color: #ffffff;
        padding: 20px 20px 5px 20px;
        width: 35%;

        &.half {
            width: 50%;
        }
    }

    .form-element {
        margin: 0 0 15px 0;

        input[type="text"],
        input[type="email"],
        textarea,
        select {
            width: 100%;
        }

        input[type="file"] {
            max-width: 100%;
        }
    }

    .double {
        margin: 0 -10px;

        .form-element {
            width: 50%;
            float: left;
            padding: 0 10px;
            @include box-sizing($bb);
        }
    }

    .triple {
        margin: 0 -10px;

        .form-element {
            width: 33%;
            float: left;
            padding: 0 10px;
            @include box-sizing($bb);

            &:nth-child(2) {
                width: 34%;
            }
        }
    }

    .element-caption {
        margin: 0 0 3px 0;
        font-weight: bold;
        font-size: $fontSizeBase + 2;

        span {
            font-weight: normal;
            color: #555555;
            font-size: $fontSizeBase - 2;
        }
    }

    .light {
        font-weight: normal;
        color: #555555;
        font-size: $fontSizeBase - 2;
    }

    .product-results {
        overflow-y: auto;
    }
}

.ob-options-dropdown {
    position: relative;
    display: inline-block;
    width: 22px;
    height: 22px;

    .toggle {
        display: block;
        width: 20px;
        height: 20px;
        border: 1px solid transparent;
        cursor: pointer;
        background: url("/_images/admin/icon-dropdown.png") center center no-repeat;
        position: relative;
    }

    .dropdown {
        position: absolute;
        z-index: 20;
        top: 21px;
        left: 0;
        background-color: #ffffff;
        border: 1px solid #acacac;
        padding: 10px;
        display: none;

        &.right {
            left: auto;
            right: 0;
        }
    }

    &:hover {
        .toggle {
            border-color: #acacac;
            border-bottom-color: #ffffff;
            background-color: #ffffff;
            z-index: 21;
        }

        .dropdown {
            display: block;
        }
    }
}

.ob-dropdown-menu {
    list-style: none;
    padding: 0;
    margin: 0;
    border: 1px solid $colorBorderBase;
    background-color: white;
    z-index: 1500 !important;

    li {
        border-top: 1px solid $colorBorderBase;
        padding: 3px 10px;
        cursor: pointer;

        &:first-child {
            border-top: none;
        }

        &:hover,
        &.active {
            background-color: rgba($colorLinkBase, 0.3);
        }

        a {
            font-size: $fontSizeBase - 2;
            text-decoration: none;
        }
    }
}

.ob-autocomplete {
    background-color: #ffffff;
    padding: 0;
    box-shadow: 0 1px 0 1px #e1e1e1;
    position: absolute;
    z-index: 10000;

    .ui-menu-item {
        display: block;
        padding: 5px 10px;
        cursor: pointer;
        @include box-sizing($bb);
        font-size: $fontSizeBase - 2;
    }

    .ui-state-focus,
    .ui-state-active {
        margin: 0;
        background-image: none;
        background-color: rgba($colorLinkBase, 0.2);
        border: none !important;
    }

    .ui-autocomplete-category {
        font-weight: bold;
        padding: 5px 10px;
        font-size: $fontSizeBase - 2;
        color: $colorLinkBase;
        list-style: none;
    }

    .ui-menu-item:hover .ob-link-dashed {
        border-bottom: none;
    }

    .ui-menu-item:hover .ob-link-add:before {
        background-position: -28px -14px;
    }
}