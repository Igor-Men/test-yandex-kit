.ui-option {
    position: relative;
    padding: 10px 10px 10px 200px;
    margin: 0 0 20px 0;
    background-color: #ffffff;

    .ui-name {
        position: absolute;
        left: 10px;
        top: 10px;
        font-weight: bold;
        width: 180px;
    }
}

.shop-table {
    border-collapse: collapse;
    border: 1px solid $colorBorderBase;

    tr {
        background-color: #ffffff;

        &:hover td {
            background-color: #e1defb;
        }
    }

    th,
    td {
        padding: 5px;
        line-height: $lineHeightBase - 2;
        border-top: 1px solid rgba(0, 0, 0, 0.04);

        a {
            font-weight: inherit;
        }
    }

    &.large th,
    &.large td {
        padding: 20px 5px;
    }

    thead td,
    thead th {
        background-color: #ffffff !important;
        border-bottom: 1px solid $colorBorderBase;
        font-weight: bold;
        padding: 10px 5px;
    }

    tfoot td,
    tfoot tr:hover td {
        background-color: #e1dfdf;
    }

    tr.selected,
    tr.selected:hover {
        background-color: rgba(0, 0, 0, 0.4);
    }

    tfoot.order-foot td {
        padding: 5px;
    }

    .tablesorter-header {
        &:hover {
            background-color: rgba($colorLinkBase, 0.05) !important;
        }

        div {
            padding: 0 8px 0 0;
            position: relative;
            font-weight: bold;

            &:before {
                content: '';
                position: absolute;
                width: 5px;
                height: 7px;
                background: url("/_images/admin/table-sort.png") right center;
                top: 50%;
                right: 0;
                margin: -4px 0 0 0;
            }
        }

        &.tablesorter-headerAsc {
            div {
                &:before {
                    background-position: left center;
                }
            }
        }

        &.tablesorter-headerDesc {
            div {
                &:before {
                    background-position: center center;
                }
            }
        }
    }

    .move {
        width: 10px;
        height: 10px;
        background: url('/_images/admin/icon-move.png');
        cursor: move;
    }

    .blocked td {
        background-color: #f2f1f1;
        color: #a8a8aa;

        a {
            color: #a8a8aa;
        }
    }

    .row-hidden {
        background-color: #eaeaea;
    }

    .row-selected {
        background-color: rgba($colorLinkBase, 0.2);
    }

    .row-deleted {
        background-color: #dadada;
    }

    .row-deleted td,
    .row-deleted td a,
    .row-deleted td div {
        color: gray;
    }

    &.table-filter thead {
        cursor: help;
    }

    &.green tr {
        background-color: lightgreen;
    }

    &.yellow tr {
        background-color: lightyellow;
    }

    .light {
        font-size: $fontSizeBase - 3;
        color: #898989;
    }
}

.shop-overflow-table {
    position: relative;
    overflow: hidden;
}

.ob-button-fixed {
    position: fixed;
    z-index: 15;
    width: 100%;
    bottom: 0;
    left: 0;
    padding: 9px;
    line-height: $lineHeightBase + 6;
    background-color: rgba(225, 225, 225, 0.60);
    text-align: center;

    a {
        font-size: $fontSizeBase;
        margin: 0 5px;
    }

    input {
        margin: 0 5px;
    }
}

.ob-button-fixed-place {
    height: 48px;
}

.ob-button {
    display: inline-block;
    vertical-align: middle;
    border: 0;
    background-color: #505050;
    color: #ffffff !important;
    font-size: $fontSizeBase !important;
    font-weight: bold !important;
    cursor: pointer;
    padding: 0 10px;
    height: 30px;
    text-align: center;
    @include box-sizing($bb);

    &.button-orange {
        background-color: #d24726;
    }

    &.button-green {
        background-color: #39b54a;
    }

    &.button-red {
        background-color: #dc0909;
    }

    &.button-cancel {
        background-color: #ffffff;
        color: $colorLinkBase !important;
        box-shadow: 0 0 1px #000000 inset;
    }

    &:hover,
    &.selected {
        border: 0;
        background-color: $colorLinkBase !important;
        color: #ffffff !important;
    }

    &:active {
        border: 0;
        background-color: rgba($colorLinkBase, 0.8);
        position: relative;
        top: 1px;
        left: 1px;
    }

    &:disabled {
        border: 0;
        background-color: #a7a7a7;
        cursor: auto;
    }
}

.linux .ob-button {
    padding: 0 5px;
}

a.ob-button {
    line-height: $lineHeightBase + 12 !important;
    text-decoration: none;
}

.important-field {
    [type=text],
    [type=password],
    select,
    textarea,
    .select2-container .select2-choice {
        border: 1px solid #00a200;
    }
}

[type="text"],
[type="password"],
[type="email"] {
    font-size: $fontSizeBase;
    color: #000000;
    font-family: Arial;
    border: 1px solid $colorBorderBase;
    padding: 0 8px;
    height: 30px;
    -webkit-transition-property: color, border;
    -moz-transition-property: color, border;
    -o-transition-property: color, border;
    -ms-transition-property: color, border;
    transition-property: color, border;
    @include transition-duration(0.5s);
    @include box-sizing($bb);
    vertical-align: middle;
}

textarea {
    padding: 6px 8px;
    font-size: $fontSizeBase;
    color: black;
    font-family: Arial;
    border: 1px solid $colorBorderBase;
    -webkit-transition-property: color, border;
    -moz-transition-property: color, border;
    -o-transition-property: color, border;
    -ms-transition-property: color, border;
    transition-property: color, border;
    @include transition-duration(0.5s);
    @include box-sizing($bb);
    resize: vertical;
}

select {
    vertical-align: middle;
    font-size: $fontSizeBase;
    color: black;
    font-family: Arial;
    border: 1px solid $colorBorderBase;
    padding: 5px 5px 5px 0;
    @include transition-duration(1s);
}

[type=text]:focus,
[type=password]:focus,
[type=mail]:focus,
textarea:focus,
select:focus {
    border: 1px solid $colorLinkBase;
    box-shadow: 0 0 5px #dedede inset;
}

[type=text]:disabled,
textarea:disabled {
    background-color: #dadada;
}

.ob-progressbar {
    border: 1px solid $colorBorderBase;
    padding: 2px;
    background-color: #ffffff;
    @include box-sizing($bb);

    span {
        height: 5px;
        display: block;
        background-color: $colorLinkBase;
    }

    &.red span  {
        background-color: $colorImportant;
    }

    &.orange span  {
        background-color: #ff8e06;
    }

    &.green span  {
        background-color: $colorSuccess;
    }
}

.ob-progressbar-grouped {
    .ob-progressbar {
        margin: -1px 0 0 0;

        &:first-child {
            margin: 0;
        }
    }
}

.ob-block-preview {
    background-color: #fffce4;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);

    .tooltipster-content {
        padding: 10px;
        line-height: $lineHeightBase + 10;
    }

    .tooltipster-arrow {
        display: none;
    }

    .loading {
        text-align: center;
        color: #555555;
    }

    .image {
        margin: -10px -10px 10px -10px;
        background-color: #ffffff;

        img {
            display: block;
            margin: 0 auto;
            max-width: 100%;
            max-height: 200px;
        }
    }

    .avatar {
        border: 5px solid #ffffff;
        position: absolute;
        top: -30px;
        left: 50%;
        margin: 0 0 0 -30px;
        width: 50px;
        height: 50px;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.30);
        background-color: #f9f9f9;

        a {
            width: 50px;
            height: 50px;
            display: table-cell;
            vertical-align: middle;
        }

        img {
            display: block;
            margin: 0 auto;
            max-width: 50px;
            max-height: 50px;
        }
    }

    .avatar-place {
        height: 25px;
    }

    .name {
        text-align: center;
        line-height: $lineHeightBase;
        color: #555555;
        margin: 0 0 5px 0;
    }

    .description {
        margin: 0 0 5px 0;
        line-height: $lineHeightBase - 2;
        font-size: $fontSizeBase - 3;
        color: #555555;
    }

    .list {
        border-collapse: collapse;

        td {
            color: #555555;
            padding: 5px 0 0 10px;
            vertical-align: top;
            line-height: $lineHeightBase;
            font-size: $fontSizeBase - 2;

            &:first-child {
                padding-left: 0;
            }

            a,
            select {
                font-size: inherit;
            }
        }
    }
}

